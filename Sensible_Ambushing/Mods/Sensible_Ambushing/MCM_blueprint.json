							"Type": "checkbox",
							"Default": true
						},
						{
							"Id": "SA_metal_chars_attract_context_condition",
							"Name": "When Does This Apply?",
							"Handles": {
								"NameHandle": "h0870b7f8328e4e73a3259acce8cf8ef5638c",
								"ChoicesHandles": [
									"h54614a1bb4f84c79911793b6d0f6466254d8",
									"he840c733509a4358878e9f57d74b6e8d4774"
								]
							},
							"Type": "radio",
							"Options": {
